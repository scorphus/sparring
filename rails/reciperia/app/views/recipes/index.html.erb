<h1>Recipes</h1>

<p>Searching for <strong> <%= @search_term %> </strong></p>

<table class="recipes">
    <% @recipes.each_slice(4) do |recipes| %>
        <tr><% recipes.each do |recipe| %>
            <td align="center">
                <%= link_to(image_tag(
                        recipe['image_url'],
                        alt: 'Picture',
                        title: recipe['title'],
                    ), recipe['f2f_url']) %>
                <br />
                <strong><%= recipe['title'] %></strong>
            </td>
        <% end %></tr>
    <% end %>
</table>
