<h1>Courses</h1>

<p>Searching for <strong> <%= @search_term %> </strong></p>

<table>
    <% @courses.each do |course| %>
        <tr class="<%= cycle('even', 'odd') %>">
            <td><%= image_tag(course['smallIcon']) %></td>
            <td>
                <p><strong><%= course['name'] %></strong></p>
                <%= course['shortDescription'] %>
            </td>
        </tr>
    <% end %>
</table>
